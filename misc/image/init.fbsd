#!/bin/sh
cd /
export PATH=/usr/sbin:/usr/bin:/sbin:/bin
echo "starting"
mount -t tmpfs tmpfs /tmp
mount -t linprocfs procfs /proc
mount -t linsysfs sysfs /sys
mount -t tmpfs -o union tmpfs /rtr
kldload linux
kldload linux64
sysctl -w net.inet6.ip6.auto_linklocal=0

cd /rtr/
ifconfig -a > /rtr/hwdet.eth
echo "/dev/ttyu0: " > /rtr/hwdet.ser

/java/bin/java -jar /rtr/rtr.jar test hwdet path /rtr/ iface bsd line raw busywait java /java/bin/
chmod 755 /rtr/*.sh
/rtr/hwdet-all.sh

